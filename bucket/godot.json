{
    "version": "3.4.1-stable",
    "description": "A feature-packed, cross-platform game engine to create 2D and 3D games from a unified interface.",
    "homepage": "https://godotengine.org/",
    "license": "MIT",
    "architecture": {
        "64bit": {
            "url": "https://github.com/godotengine/godot/releases/download/3.4.1-stable/Godot_v3.4.1-stable_win64.exe.zip",
            "hash": "sha512:f7b5b9304db372ce0af308dde4a4256819560c71e8e21fd134f342735c47efdd650538cf63579fbdf3341221078de1ce7d1408e4970fab465f43fe5fe1ffb6a4"
        },
        "32bit": {
            "url": "https://github.com/godotengine/godot/releases/download/3.4.1-stable/Godot_v3.4.1-stable_win32.exe.zip",
            "hash": "sha512:6f1774be51128b5d37c37d611b455d3a358bfee5e863a44b6b138966c955a19b22276c68c8ff4092a75485507a0f0abcc406e03a3f24e14268fa225ca0d21eb8"
        }
    },
    "pre_install": [
        "Remove-Item \"$dir\\Godot_*_console.*\"",
        "Get-Item \"$dir\\Godot_*.exe\" | Rename-Item -NewName 'godot.exe'"
    ],
    "bin": "godot.exe",
    "shortcuts": [
        [
            "godot.exe",
            "Godot Engine"
        ]
    ],
    "checkver": {
        "script": [
            "$responseContent = (Invoke-WebRequest -Headers @{'Accept' = 'application/vnd.github+json'; 'X-Github-Api-Version' = '2022-11-28' } -Uri 'https://api.github.com/repos/godotengine/godot/releases').Content | ConvertFrom-Json",
            "$tags = $responseContent |select -Property tag_name",
            "$versionList = $tags |foreach {@{tag = $_.tag_name; ver = [System.Version]$_.tag_name.Substring(0, $_.tag_name.IndexOf('-'))}}",
            "$latest = ($versionList |sort -Property ver -Descending)[0].tag",
            "Write-Output $latest"
        ],
        "regex": "^(.+)$"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://github.com/godotengine/godot/releases/download/$version/Godot_v$version_win64.exe.zip"
            },
            "32bit": {
                "url": "https://github.com/godotengine/godot/releases/download/$version/Godot_v$version_win32.exe.zip"
            }
        },
        "hash": {
            "url": "https://github.com/godotengine/godot/releases/download/$version/SHA512-SUMS.txt"
        }
    }
}
